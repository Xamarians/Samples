<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ChatDemo.Controls"
             x:Class="ChatDemo.MainPage">
    <StackLayout BackgroundColor="#11381e">
        <local:CustomEntry Placeholder="Enter UserName" HeightRequest="50" Text="{Binding UserName}" Margin="10" HorizontalOptions="FillAndExpand" TextColor="Black" BackgroundColor="White" VerticalOptions="Center"/>
        <local:CustomEntry Placeholder="Enter Name" HeightRequest="50" Text="{Binding Name}" Margin="10" HorizontalOptions="FillAndExpand" TextColor="Black" BackgroundColor="White" VerticalOptions="Center"/>
        <Button Text="Login" HorizontalOptions="FillAndExpand" HeightRequest="60" VerticalOptions="Center" Clicked="Button_Clicked" BackgroundColor="White" TextColor="Black" FontSize="Medium" FontAttributes="Bold"/>
    </StackLayout>
</ContentPage>