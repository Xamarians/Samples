<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CompressedVideoDemo.Views.CompressVideoPage">
    <Grid>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Button Text="Choose Video and Compress" Clicked="ChooseVideoAndCompressBtn_Clicked" />
            <Button Text="Play Video" Clicked="PlayBtn_Clicked"/>
        </StackLayout>
        <ActivityIndicator IsRunning="{Binding IsBusy}"  VerticalOptions="Center" HorizontalOptions="Center"/>
    </Grid>
</ContentPage>