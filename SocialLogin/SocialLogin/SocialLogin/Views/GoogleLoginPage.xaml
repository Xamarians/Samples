<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialLogin.Views.GoogleLoginPage">
  <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
    <Label x:Name="lblGoogleLoginName" />
    <Button Text="Login With Google" TextColor ="Black"  BackgroundColor="#E9EAEC" Image="ic_gmail.png" Clicked="OnLoginClicked"/>
    <Button  x:Name="btnLogout"  Text="Logout" TextColor ="Black" IsVisible="False" BackgroundColor="#E9EAEC" Clicked="OnLogoutClicked"/>
  </StackLayout>
</ContentPage>