<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialLogin.Views.FacebookLoginPage">
  <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
     <Label x:Name="lblFbLoginName" />
    <Button Text="Login With Facebbok" TextColor ="White"  BackgroundColor="Blue" Image="ic_facebook.png" Clicked="OnLoginClicked"/>
    <Button  x:Name="btnLogout"  Text="Logout" TextColor ="White" IsVisible="False" BackgroundColor="Blue" Clicked="OnLogoutClicked"/>
  </StackLayout>
</ContentPage>