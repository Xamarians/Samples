<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialLogin.Views.LinkedInLoginPage">
  <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
    <Label x:Name="lblLinkedInLoginName" />
    <Button Text="Login With linkedIn" TextColor ="White"  BackgroundColor="#0077B5" Image="ic_linkedin.png" Clicked="OnLoginClicked"/>
    <Button  x:Name="btnLogout"  Text="Logout" TextColor ="White" IsVisible="False" BackgroundColor="#0077B5" Clicked="OnLogoutClicked"/>
  </StackLayout>
</ContentPage>